<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="training.seller.content.top">
            <arguments>
                <argument name="background_color" xsi:type="string">#AADDDD</argument>
                <argument name="border_color" xsi:type="string">#DD4444</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="product.info.details">
            <block name="product.sellers" class="Training\Seller\Block\Product\Sellers" group="detailed_info" template="Training_Seller::product/sellers.phtml">
                <arguments>
                    <argument name="title" translate="true" xsi:type="string">Sellers</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>